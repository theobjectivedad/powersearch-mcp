{
    "$schema": "https://gofastmcp.com/public/schemas/fastmcp.json/v1.json",
    "source": {
        "type": "filesystem",
        "path": "src/powersearch_mcp/app.py",
        "entrypoint": "mcp"
    },
    "environment": {
        "type": "uv",
        "project": ".",
        "editable": [ "." ]
    },
    "deployment": {
        "transport": "streamable-http",
        "host": "127.0.0.1",
        "port": 8099,
        "path": "/mcp",
        "log_level": "INFO",
        "env": {
            "POWERSEARCH_LANGUAGE": "en",
            "POWERSEARCH_SAFE_SEARCH": "1",
            "POWERSEARCH_FILTER_SCORE_PERCENTILE": "75",
            "POWERSEARCH_FILTER_TOP_K": "10",
            "POWERSEARCH_CONTENT_STRATEGY": "fetch",
            "POWERSEARCH_CONTENT_LIMIT": "4000",
            "POWERSEARCH_TIMEOUT_SEC": "20",
            "POWERSEARCH_HTTP2": "false",
            "POWERSEARCH_CACHE": "memory",
            "POWERSEARCH_CACHE_TTL_SEC": "3600",
            "POWERSEARCH_LOG_LEVEL": "INFO",
            "POWERSEARCH_INCLUDE_PAYLOADS": "false",
            "POWERSEARCH_INCLUDE_PAYLOAD_LENGTH": "false",
            "POWERSEARCH_ESTIMATE_PAYLOAD_TOKENS": "false",
            "POWERSEARCH_MAX_PAYLOAD_LENGTH": "1000",
            "POWERSEARCH_ERRORHANDLING_TRACEBACK": "false",
            "POWERSEARCH_ERRORHANDLING_TRANSFORM": "true",
            "POWERSEARCH_RETRY_RETRIES": "3",
            "POWERSEARCH_RETRY_BASE_DELAY": "1.0",
            "POWERSEARCH_RETRY_MAX_DELAY": "60.0",
            "POWERSEARCH_RETRY_BACKOFF_MULTIPLIER": "2.0",
            "FASTMCP_LOG_LEVEL": "INFO",
            "FASTMCP_MASK_ERROR_DETAILS": "false",
            "FASTMCP_STRICT_INPUT_VALIDATION": "true",
            "FASTMCP_INCLUDE_FASTMCP_META": "true",
            "FASTMCP_STATELESS_HTTP": "true",
            "FASTMCP_DOCKET_URL": "memory://",
            "FASTMCP_DOCKET_CONCURRENCY": "10",
            "FASTMCP_SERVER_AUTH": "fastmcp.server.auth.RemoteAuthProvider",
            "FASTMCP_SERVER_AUTH_JWT_JWKS_URI": "http://127.0.0.1:8080/realms/example/protocol/openid-connect/certs",
            "FASTMCP_SERVER_AUTH_JWT_ISSUER": "http://127.0.0.1:8080/realms/example",
            "FASTMCP_SERVER_AUTH_JWT_AUDIENCE": "powersearch-mcp",
            "FASTMCP_SERVER_AUTH_JWT_REQUIRED_SCOPES": "powersearch:read",
            "FASTMCP_SERVER_AUTH_REMOTEAUTHPROVIDER_AUTHORIZATION_SERVERS": "http://127.0.0.1:8080/realms/example",
            "FASTMCP_SERVER_AUTH_REMOTEAUTHPROVIDER_BASE_URL": "http://127.0.0.1:8099",
            "POWERSEARCH_AUTHZ_POLICY_PATH": "example-configs/mcp_policies.json"
        }
    }
}
