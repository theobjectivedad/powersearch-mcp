POWERSEARCH_BASE_URL=http://127.0.0.1:9876

# Authentication (JWT via RemoteAuthProvider + JWTVerifier)
# Replace the placeholder values with your Keycloak (or other IDP) settings.
FASTMCP_SERVER_AUTH=fastmcp.server.auth.RemoteAuthProvider
FASTMCP_SERVER_AUTH_JWT_JWKS_URI=http://127.0.0.1:8080/realms/example/protocol/openid-connect/certs
FASTMCP_SERVER_AUTH_JWT_ISSUER=http://127.0.0.1:8080/realms/example
FASTMCP_SERVER_AUTH_JWT_AUDIENCE=powersearch-mcp
FASTMCP_SERVER_AUTH_JWT_REQUIRED_SCOPES=powersearch:read
FASTMCP_SERVER_AUTH_REMOTEAUTHPROVIDER_AUTHORIZATION_SERVERS=http://127.0.0.1:8080/realms/example
FASTMCP_SERVER_AUTH_REMOTEAUTHPROVIDER_BASE_URL=http://127.0.0.1:8099

# Eunomia authorization (static policy file)
POWERSEARCH_AUTHZ_POLICY_PATH=example-configs/mcp_policies.json
